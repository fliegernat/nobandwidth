html
    header
        title no-bandwidth

        style(type="text/css").
            h1 {
                margin-top: 1.5em;
                margin-bottom: 1.5em;
                font-weight: 'bold';
            }
            div.post {
                margin: 0;
                margin-bottom: 0.5em;
                margin-left: 5px;
                margin-right: 5px;
                opacity: 1;
            }
            * {
                font-size: 10pt;
                font-family: "Courier New";
                margin: 0;
                margin-bottom: 0.5em;
                margin-left: 5px;
                margin-right: 5px;
            }
            hr {
                border: 0; 
                height: 1px; 
                background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
                margin-top: 1.5em;
            }

    body
        each c in content 
            div(class="post") !{c}
            hr
    footer
