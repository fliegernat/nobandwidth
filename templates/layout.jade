doctype html
block vars
  - var bodyclass = null;
html
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    div#content
      block content